<%= render "common/errors", model: @film %>

<%= form_for(@film) do |f| %>
  <p>
    <%= f.label :tytuł %><br>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :data_premiery %><br>
    <%= f.date_field :premiere_date %>
  </p>
  <p>
    <%= f.label :czas_trwania %><br>
    <%= f.number_field :duration %>
  </p>
  <p>
    <%= f.label :opis %><br>
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :gatunek %><br>
    <%= f.text_field :genre %>
  </p>
  <p>
    <%= f.label :reżyser %><br>
    <%= f.text_field :director %>
  </p>
  <p>
    <%= f.label :scenarzysta %><br>
    <%= f.text_field :scenarist %>
  </p>
  <p>
    <%= f.label :kraj_produkcji %><br>
    <%= f.text_field :country %>
  </p>
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to "Wróć", films_path %>
